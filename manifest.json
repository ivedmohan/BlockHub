{
    "name": "BlockHub",
    "version": "1.1.0",
    "description": "BlockHub is an advanced ad blocker that effectively blocks ads on the web, providing a cleaner and faster browsing experience.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "16": "icons/icon16.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png"
        }
    },
    "applications": {
        "gecko": {
            "id": "your-extension-id@example.com"
        }
    },
    "manifest_version": 2
}